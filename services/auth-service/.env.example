# =============================================================================
# Flowgrid Auth Service - Environment Variables
# Copy to .env and update values
# =============================================================================

# Server
PORT=3002
NODE_ENV=development

# Database
DATABASE_URL=postgres://flowgrid:FlowgridDev2026!@localhost:5432/flowgrid

# Redis (for rate limiting)
REDIS_URL=redis://localhost:6379

# JWT Configuration
# IMPORTANT: Change this in production!
JWT_SECRET=flowgrid_jwt_secret_CHANGE_IN_PRODUCTION_use_at_least_64_chars
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# CORS
CORS_ORIGIN=http://localhost:8080

# Email (Resend)
RESEND_API_KEY=re_your_api_key_here
EMAIL_FROM=Flowgrid <onboarding@resend.dev>
APP_BASE_URL=http://localhost:8080

# Azure AD B2C (Microsoft OAuth) - Optional
# Leave empty to disable Microsoft sign-in
AZURE_CLIENT_ID=
AZURE_CLIENT_SECRET=
AZURE_TENANT_ID=
AZURE_B2C_TENANT_NAME=
AZURE_B2C_POLICY_NAME=B2C_1_signupsignin
AZURE_REDIRECT_URI=http://localhost:8080/api/auth/oauth/microsoft/callback
