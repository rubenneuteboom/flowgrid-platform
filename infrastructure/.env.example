# =============================================================================
# Flowgrid Platform - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!
# =============================================================================

# -----------------------------------------------------------------------------
# General
# -----------------------------------------------------------------------------
NODE_ENV=development
LOG_LEVEL=debug

# -----------------------------------------------------------------------------
# Database (PostgreSQL)
# -----------------------------------------------------------------------------
DB_PASSWORD=your_secure_password_here
DATABASE_URL=postgres://flowgrid:${DB_PASSWORD}@postgres:5432/flowgrid

# -----------------------------------------------------------------------------
# Cache (Redis)
# -----------------------------------------------------------------------------
REDIS_URL=redis://redis:6379

# -----------------------------------------------------------------------------
# Authentication (JWT)
# -----------------------------------------------------------------------------
JWT_SECRET=your_super_secret_jwt_key_here_min_32_chars
JWT_EXPIRES_IN=1d

# Azure AD B2C (optional - for production)
# AZURE_AD_CLIENT_ID=
# AZURE_AD_TENANT_ID=
# AZURE_AD_AUDIENCE=

# -----------------------------------------------------------------------------
# AI Services
# -----------------------------------------------------------------------------
AI_PROVIDER=anthropic

# Anthropic (Claude)
ANTHROPIC_API_KEY=sk-ant-xxxxx

# OpenAI (GPT-4)
OPENAI_API_KEY=sk-xxxxx

# -----------------------------------------------------------------------------
# ServiceNow Integration (optional)
# -----------------------------------------------------------------------------
SERVICENOW_INSTANCE=your-instance.service-now.com
SERVICENOW_USER=admin
SERVICENOW_PASSWORD=your_password

# -----------------------------------------------------------------------------
# Azure (optional - for cloud deployment)
# -----------------------------------------------------------------------------
# AZURE_SUBSCRIPTION_ID=
# AZURE_RESOURCE_GROUP=rg-flowgrid
# AZURE_LOCATION=westeurope

# Application Insights
# APPINSIGHTS_INSTRUMENTATIONKEY=

# -----------------------------------------------------------------------------
# Feature Flags
# -----------------------------------------------------------------------------
ENABLE_METRICS=true
ENABLE_TRACING=false
ENABLE_DEBUG_ENDPOINTS=true
